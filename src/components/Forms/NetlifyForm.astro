---
interface Props {

    /** Email subject. Only use if there is 1 subject option - ie: subject is not a <select> */
    subject? : string,

    /**
     * @prop subject - string
     * @prop slot
     */
    props? : true
}

const {
    subject
} = Astro.props
---

<form id="email-form" method="post" data-netlify="true" name="contact">

    { subject && <input type="hidden" name="subject" value={subject} /> }

    <slot />
    
</form>


<style>

form {
    display : grid;
    gap : 2rem;
}
</style>