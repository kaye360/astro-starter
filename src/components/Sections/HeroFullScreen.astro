---
import { HERO_IMG_DIMENSIONS, HERO_IMG_PATH, LOGO_NAME } from "../../config";
import Icon from "../Icon.astro";
import Wrapper from "../Wrapper.astro";
import Image from '../Image.astro'
import type { HTMLAttributes } from "astro/types";
import Button from "../Button.astro";

interface Props extends HTMLAttributes<'section'> {
    
    /**
     * @extends <section>
     * @prop none
     */
    props? : true
}

const {...rest} = Astro.props

---

<!-- data-element hero is used for navbar transparency toggle -->
<section id="hero" data-element="hero" class="h-screen grid items-center" {...rest}>
    
    <div class="absolute top-0 left-0 w-full h-screen z-[-1] bg-primary-600">
        <Image src={HERO_IMG_PATH} alt={LOGO_NAME} width={HERO_IMG_DIMENSIONS.width} height={HERO_IMG_DIMENSIONS.height} class="w-screen h-screen object-cover mix-blend-overlay" />
    </div>

    <Wrapper 
        width="max" 
        padding="inline"
        class={`grid items-center`}
    >

        <div class={`grid gap-8 md:w-2/3`}>

            <h1>
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum, fuga.
            </h1>

            <p>
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni delectus quam reprehenderit officiis optio provident exercitationem harum. Corporis eaque dignissimos sapiente quisquam ipsam, sint odio. Nihil nemo iusto numquam corrupti.
            </p>

            <div class={`flex items-center gap-2`}>
                
                <Button type="link" href='#' class="primary-hero-CTA">
                    <Icon icon='touch_app' />
                    Call to Action
                </Button>
                
                <Button type="link" href='#' class="secondary-hero-CTA">
                    <Icon icon='arrow_circle_down' />
                    Learn More
                </Button>

            </div>

        </div>

    </Wrapper>

</section>


<style>

h1 {
    font-size: 2.5rem !important;
    line-height: 2.8rem;
    letter-spacing: 0.05rem;
    font-weight: 600 !important;
    color : var(--hero-text-color);
}

p {
    font-size : 1.3rem;
    color : var(--hero-text-color);
}

.primary-hero-CTA {
    background-color : var(--hero-CTA-bg-color);
    color : var(--hero-CTA-text-color);
}

.primary-hero-CTA:hover, .primary-hero-CTA:focus {
    background-color : var(--hero-CTA-bg-color-hover);
    color : var(--hero-CTA-text-color-hover);
}

.secondary-hero-CTA {
    color : var(--hero-text-color);
    border : 1px solid transparent;
}

.secondary-hero-CTA:hover, .secondary-hero-CTA:focus {
    border-color : var(--hero-text-color);
}

</style>

