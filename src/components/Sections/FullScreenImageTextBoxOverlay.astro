---
import TextFlow from "../TextFlow.astro";
import Wrapper from "../Wrapper.astro";

interface Props  {

    /** Full screen background image path */
    bgImage : string,

    /**
     * @prop bgImage : string
     * @prop slot
     * @prop {...rest}
     */
    props? : true,

    [key : string] : any
}

const { 
    bgImage,
    ...rest
} = Astro.props

---

<section style={`background-image : url('${bgImage}')`} class="bg-cover bg-fixed bg-center" { ...rest }>
	<Wrapper width="text" padding="both" class="min-h-screen place-items-center">
		<TextFlow class="p-8 md:p-16 m-4 bg-primary-100 bg-opacity-90 text-lg">

            <slot />
			
		</TextFlow>
	</Wrapper>
</section>
