---
import type { HTMLAttributes } from 'astro/types';
import Icon from '../Icon.astro';
import Link from '../Link.astro';

interface Props extends HTMLAttributes<'li'> {

    /** Link href of Contact link */
    href? : string,

    /** Material Icon string */
    icon? : string,

    class? : string,

    /**
     * @extends <li>
     * @prop href string
     * @prop icon string
     * @prop slot
     */
    props? : true,
}

const {
    href,
    icon,
} = Astro.props
---

{ href ? (

    <li>
        <Link to={href} class={`contact-bar-item`}>
            {icon && <Icon icon={icon} /> }
            <slot />
        </Link>
    </li>

) : (

    <li class={`contact-bar-item`}>
        {icon && <Icon icon={icon} /> }
        <slot />
    </li>

)}



<style>

.contact-bar-item {
    display : flex;
    align-items: center;
    gap : 0.5rem;
    font-size: 0.875rem;
    line-height: 1.25rem
}

</style>