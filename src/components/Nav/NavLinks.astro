---
import { CTAPath, PAGES } from "../../config";
import NavLink from "./NavLink.astro";

---

<ul class="nav-links">
    { PAGES.map( (page) => ( 
        page.headerNav && page.path !== CTAPath && <NavLink href={page.path}>{page.title}</NavLink>
    ))}

</ul>


<style is:global>

ul.nav-links {
    display : flex;
    align-items: center;
    gap : 1.5rem;
    width : 100%;
    transition: all 350ms cubic-bezier(0.34, 1.56, 0.64, 1);
}

@media screen and (max-width: 1023px) {
        
    ul.nav-links {
        flex-direction: column;
        overflow: hidden;
        max-height: 0px;
    }
    
    .mobile-menu-is-open ul.nav-links {
        padding-block : 2rem;
        max-height: 1000px;
    }

}


</style>