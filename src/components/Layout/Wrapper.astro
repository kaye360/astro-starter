---
import type { HTMLAttributes } from 'astro/types';



interface Props extends HTMLAttributes<'div'> {

    /** Width of Wrapper.
     * Default is width of 72rem, 1152px
     * wide = 100%
     * text = 65ch
     */
    width? : 'wide' | 'default' | 'slim',

    /** Default padding applied to inline, block, or both */
    padding? : 'inline' | 'block' | 'inline-block'
    
    class? : string,

    /**
     * @prop width: 'wide' | 'default' | 'slim',
     * @prop padding 'inline' | 'block' | 'inline-block'
     * @prop class
     * @prop slot
     */
    props? : true
}

const { 
    width             = 'default',
    padding           = 'inline-block',
    class : className = '',
    ...rest
} = Astro.props
---

<div 
    class:list={[
        'mx-auto w-full relative',
        `${width === 'default' ? 'max-w-6xl'    : ''}`,
        `${width === 'slim'    ? 'max-w-[70ch]' : ''}`,
        `${padding === 'inline'       ? 'px-default'            : ''}`,
        `${padding === 'block'        ? 'py-default'            : ''}`,
        `${padding === 'inline-block' ? 'px-default py-default' : ''}`,
        className
    ]} 
    {...rest}
>

    <slot />

</div>