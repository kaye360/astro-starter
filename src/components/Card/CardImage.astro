---
import type { Image as ImageProps } from '../Base/Image.astro'
import Image from '../Base/Image.astro';

interface Props extends ImageProps { 

    /**
     * Extra class names
     */
    class? : string,

    /**
     * Requires the following img props: src, width, height, alt
     * class: string
     */
    props? : true
}

const { src, width, height, alt, class:className = '' } = Astro.props
---

<Image
    src={src}
    width={width}
    height={height}
    alt={alt}
    class:list={["w-full aspect-video object-cover", className]}
    lazy
/>
