---
import type { Image as ImageProps } from '../Base/Image.astro'
import Image from '../Base/Image.astro';

interface Props extends ImageProps { 
    /**
     * Requires the following img props: src, width, height, alt
     */
    props? : true
}

const { src, width, height, alt } = Astro.props
---

<Image
    src={src}
    width={width}
    height={height}
    alt={alt}
    class="w-full aspect-video object-cover"
    lazy
/>
