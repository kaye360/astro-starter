---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div' | 'a'>  {
    /**
     * @prop href? : string,
     * @prop slot
     */
    props? : true
    href? : string,
}

const {
    href,
    ...rest
} = Astro.props

const Element = href ? 'a' : Fragment
---

<Element {href}>
    <div 
        class="flex flex-col gap-3 h-full overflow-hidden transition-all border border-primary-100 shadow-lg shadow-primary-200 rounded-lg"
        {...rest}
    >
        <slot />
    </div>
</Element>

