---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<HTMLElement extends HTMLTag> = Polymorphic<{ 

    /**
     * Link href if the whole card is a link
     */
    href? : string,

    /**
     * Element to wrap the whole card.
     */
    as : HTMLElement,

    /**
     * Extra class names
     */
    class? : string,

    /**
     * @prop href? : string
     * @prop as? : string - Default 'div'
     * @prop class? : string
     * @prop slot
     */
    props? : true
}>

const {
    href = null,
    as : Element = 'div',
    class: className = '',
    ...rest
} = Astro.props

---

<Element
    {...( href ? {href} : {} )}
    class:list={["flex flex-col gap-3 h-full border border-primary-100 shadow-lg shadow-primary-200/50 rounded-lg", className]}
    {...rest}
>
    <slot />
</Element>

