---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'span' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> {

    Element? : 'span' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';

    /**
     * 
     */
    props? : true
}

const {
    Element = 'span'
} = Astro.props
---

