---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'span' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> {
    /**
     * @prop Element? : 'span' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
     * @prop class? : string
     */
    props?   : true
    Element? : 'span' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
    class?   : string,
}

const {
    Element = 'h3',
    class : className
} = Astro.props
---

<Element class:list={['text-xl font-semibold px-2 font-theme', className]}>
    <slot />    
</Element>