---
import type { HTMLTag, Polymorphic } from "astro/types"

type Props<HTMLElement extends HTMLTag> = Polymorphic<{ 
    
    /**
     * Element to wrap the heading in
     */
    as: HTMLElement 

    /**
     * Extra class names
     */
    class?   : string,

    /**
     * @prop as? string (html element)
     * @prop class? : string
     */
    props?   : true

}>

const {
    as : Element = 'h3',
    class : className
} = Astro.props
---

<Element class:list={['text-xl font-semibold px-2 py-2 font-theme', className]}>
    <slot />    
</Element>