---
import type { HtmlATag, HtmlButtonTag } from './buttonTypes'

type Props = HtmlATag | HtmlButtonTag

const { 
    variant = 'fill',
    class: className,
    ...props
} = Astro.props

const ButtonElement = props.href ? 'a' : 'button'
---

<ButtonElement 
    class:list={[
        'inline-flex items-center justify-center gap-2 px-6 py-2 font-bold tracking-wide rounded-md border transition-all', 
        variant === 'fill'    ? 'border-secondary-500 bg-secondary-500 text-secondary-100 ' : '',
        variant === 'outline' ? 'border-primary-800 ' : '',
        variant === 'fill' || variant === 'outline' ? 'hover:bg-primary-900 hover:text-primary-100 active:bg-secondary-500' : '',
        variant === 'ghost'   ? 'border-transparent hover:underline hover:border-primary-500 active:bg-secondary-500' : '',
        className
    ]}
    {...props}
>
    <slot />
</ButtonElement>