---
import { getCollection } from "astro:content";
import Heading from "../components/Heading.astro";
import Layout from "../layouts/Layout.astro";
import Wrapper from "../components/Wrapper.astro";
import Card from "../components/Card.astro";
import TextFlow from "../components/TextFlow.astro";

const allProducts = await getCollection('products')

---

<Layout
    type="base"
    title="About Us"
    description="Tenetur culpa ab ipsam tempora est debitis? Totam quis saepe nostrum ducimus ipsa id vitae sit."
>

    <Heading>
        Products
    </Heading>

    <section>
        <Wrapper width="max" padding="both">

            <div class="products">
                {allProducts.map( product => (
                    <Card props 
                        class="border border-primary-100 drop-shadow-lg shadow-primary-600 text-primary-900 rounded-xl pb-6"
                        img={{
                            src : product.data.image,
                            width : 200,
                            height : 200,
                            alt : 'Product Image'
                        }}
                    >
                        <h2 slot="heading" class="px-6">
                            {product.data.title} <br />
                        </h2>

                        
                        <TextFlow slot="content" class="px-6">
                            {product.data.description}    
                        </TextFlow>
                    </Card>
                ) )}

            </div>
        </Wrapper>

    </section>

</BaseLayout>


<style>

.products {
    display : grid;
    gap : 1rem;
    grid-template-columns : repeat(auto-fill, minmax(250px, 1fr));
    width : 100%;
}

</style>