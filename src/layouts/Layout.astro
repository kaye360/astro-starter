---
import '../css/main.css'
import { SITE_SHORT_NAME, SITE_URL } from '../config/site';
import BackToTop from '../components/Layout/BackToTop.astro';
import Footer from '../components/Layout/Footer.astro';
import Header from '../components/Layout/Header.astro';
import SkipToContent from '../components/Layout/SkipToContent.astro';
import Main from '../components/Layout/Main.astro';


interface Props  {
	title : string,
    description : string,
	lang? : string,
	class? : string,
	props? : true
}

const {
    title = '',
    description = '',
	lang = 'en',
	class : className = ''
} = Astro.props

---

<html lang={lang} class="">

	<head>
		<!-- <meta 
			http-equiv="Content-Security-Policy" 
			content=`default-src https:; 
					img-src 'self';
					object-src 'self';
					connect-src 'self';
					script-src 'self' ${import.meta.env.DEV ? 'http://localhost:4321;' : ''};
					${import.meta.env.DEV 
						? "style-src 'unsafe-inline' https://fonts.googleapis.com;" 
						: "style-src 'self' https://fonts.googleapis.com;"
					}
					style-src-attr 'unsafe-inline';
		`/> -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/meta/favicon.svg" />

		<meta name="theme-color" content="#D7CCC1" />

		<!-- More info re: preload google fonts at https://stackoverflow.com/questions/45983301/google-pagespeed-eliminate-render-blocking-resources-above-the-fold-caused-fro -->
		<link
			rel="preload"
			href="https://fonts.googleapis.com/css2?family=Bonheur+Royale&family=Gloock&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
			as="style"
			onload="this.onload=null;this.rel='stylesheet'"
		/>
		<noscript>
			<link
				href="https://fonts.googleapis.com/css2?family=Bonheur+Royale&family=Gloock&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
				rel="stylesheet"
				type="text/css"
			/>
		</noscript>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Mooli&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
		

		<meta name="description" content={description}>

		<title>
			{title + '- ' + SITE_SHORT_NAME}
		</title>

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content={SITE_URL + Astro.url.pathname }>
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content="/img/temp.jpg">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content={SITE_URL}>
		<meta property="twitter:url" content={SITE_URL + Astro.url.pathname }>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content="/img/temp.jpg">

		<slot name="meta" />
	</head>

	<body 
		class:list={['bg-primary-25 font-base text-primary-900', className]}
		data-mobile-menu="closed"
	>

		<SkipToContent />

		<div id="top" class=" h-0 w-full" />

		<Header />

        <Main>

            <slot />

        </Main>

        <Footer />

		<BackToTop />
		
	</body>
</html>


